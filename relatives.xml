<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textSize="50sp"
            android:textColor="#ed0808"
            android:background="#be8c8c"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="2"
                android:textSize="50sp"
                android:layout_marginStart="10dp"
                android:textColor="#ed0821"
                android:background="#2c2d21"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="3"
                android:layout_marginLeft="10dp"
                android:textSize="50sp"
                android:textColor="#ed0821"
                android:background="#12d48d"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4"
                android:layout_marginLeft="10dp"
                android:textSize="50sp"
                android:textColor="#ed0821"
                android:background="#0c4fe2"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true">

    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="5"
        android:textSize="50sp"
        android:layout_marginStart="10dp"
        android:textColor="#ed0821"
        android:background="#e8fa22"/>
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="6"
        android:layout_marginLeft="10dp"
        android:textSize="50sp"
        android:textColor="#ed0821"
        android:background="#0b3626"/>
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="7"
        android:layout_marginLeft="10dp"
        android:textSize="50sp"
        android:textColor="#ed0821"
        android:background="#8797ba"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="8"
        android:textSize="50sp"
        android:textColor="#ed0808"
        android:background="#d27205"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="9"
            android:textSize="50sp"
            android:layout_marginTop="20dp"
            android:textColor="#ed0808"
            android:background="#be8c8c"/>


    </LinearLayout>

</RelativeLayout>